<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:layout_height="300dp">
        <LinearLayout
            android:id="@+id/vv_l"
            android:layout_width="match_parent"
            android:background="#c000"
            android:orientation="vertical"
            android:layout_height="200dp">

        </LinearLayout>

        <ProgressBar
            android:layout_alignBottom="@id/vv_l"
            android:layout_width="match_parent"
            android:max="100"
            android:id="@+id/video_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/video_progress"
            android:layout_height="15dp" />
        <LinearLayout
            android:visibility="visible"
            android:layout_below="@id/vv_l"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/video_value"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/video_timeline"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/video_music"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/video_img"
            android:layout_width="75dp"
            android:background="#afff"
            android:layout_marginLeft="30dp"
            android:layout_height="75dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">

        <TextView

            android:id="@+id/music_left"
            android:layout_width="50dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/music_left"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/music_middle"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/music_middle"
            android:gravity="center"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/music_right"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/music_right"
            android:gravity="center"
            android:textColor="#000"
            android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
